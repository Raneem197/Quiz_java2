<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/question"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="10dp"
                        android:paddingLeft="15dp"
                        android:paddingTop="3dp"
                        android:paddingBottom="2dp"
                        android:text="Write a program to print the area of a rectangle by creating a class named 'Area'. it's taking the values of its length and breadth as parameters of its constructor and having a method return  the area of the rectangle.  declaring accessors and mutators method using this reference. And length and breadth of rectangle are entered through user.  "
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="normal" />

                    <Button
                        android:id="@+id/ansr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="#00828f"
                        android:onClick="ViewAnswe"
                        android:text="Press here to see model answer"
                        android:textColor="#f4f3f3"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/answer_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginRight="50dp"
                        android:background="#F3F3F3"
                        android:paddingLeft="6dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="5dp"
                        android:shadowColor="#222020"
                        android:text="@string/stop"
                        android:textColor="#181919"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/comp2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="20dp"
                        android:background="#00828f"
                        android:onClick="gotocompiler"
                        android:text="Press here to try to run your code."
                        android:textColor="#f4f3f3"
                        android:textSize="15dp" />

                </LinearLayout>
            </ScrollView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>